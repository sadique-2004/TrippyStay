<% layout('/layouts/boilerplate') -%>

    <style>
        .search-inp {
            border-radius: 25px;
            padding: 0.5rem 1.5rem;
            border: 1px solid #fe424d;
            transition: all 0.3s ease-in-out;
        }

        .search-inp:focus {
            outline: none !important;
            box-shadow: 0 0 5px rgba(254, 66, 77, 0.5);
            border-color: #fe424d;
        }

        .signin-btn {
            border-radius: 25px;
            padding: 0.5rem 1.5rem;
            font-weight: 600;
            border: none;
            transition: all 0.3s ease-in-out;
            background-color: #fe424d;
        }

        .signin-btn:hover {
            background-color: #d93842;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.15);
            color: white;
        }

        .signup-link {
            color: rgb(99, 99, 238);
        }
    </style>

    <div class="row justify-content-center align-items-center max-vh-100 my-3">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow-sm border-0 rounded-3 overflow-hidden">
                <div class="row g-0">

                    <!-- Left Section: Image -->
                    <div class="col-md-6 d-none d-md-block bg-light p-4">
                        <img src="/assets/logintravelers.svg" alt="Travelers Login" class="img-fluid">
                    </div>

                    <!-- Right Section: Sign In Form -->
                    <div class="col-md-6 p-4">
                        <h2 class="text-center mb-3">Sign In to TrippyStay</h2>
                        <p class="text-center text-muted">Access your account and explore top destinations</p>

                        <form action="/login" method="post" class="needs-validation" novalidate>

                            <!-- Username Input -->
                            <div class="mb-3">
                                <label for="username" class="form-label fw-semibold">Username</label>
                                <input type="text" name="username" id="username" class="form-control search-inp"
                                    placeholder="Enter your username" required>

                                <div class="invalid-feedback">
                                    Please enter a valid username.
                                </div>
                            </div>

                            <!-- Password Input -->
                            <div class="mb-3">
                                <label for="password" class="form-label fw-semibold">Password</label>
                                <input type="password" name="password" id="password" class="form-control search-inp"
                                    placeholder="Enter your password" required>

                                <div class="invalid-feedback">
                                    Please enter your password.
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <button type="submit" class="btn btn-primary w-100 py-2 signin-btn">Sign In</button>

                            <!-- Signup Link -->
                            <p class="mt-3 text-center">
                                Don't have an account?
                                <a href="/signup" class="text-decoration-none fw-semibold signup-link">Join
                                    TrippyStay</a>
                            </p>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>