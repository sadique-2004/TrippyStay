<% layout('/layouts/boilerplate') -%>

    <div class="row">
        <div class="col-6 offset-3">
            <form action="/signup" method="post" class="needs-validation" novalidate>
                <h2>Sign Up on TrippyStay</h2>

                <div class="mb-3">
                    <label for="username" class="form-label">username</label>
                    <input name="username" type="text" placeholder="sadique_dev" id="username"
                        class="form-control" required>

                    <div class="invalid-feedback">
                        Please enter valid username !
                    </div>

                    <div class="valid-feedback">
                        Title Looks good!
                    </div>

                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" placeholder="sadique@gmail.com" class="form-control" id="email" name="email"
                        required>

                    <div class="invalid-feedback">
                        Please enter valid email !
                    </div>

                    <div class="valid-feedback">
                        Email looks good!
                    </div>

                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" name="password" required>

                    <div class="invalid-feedback">
                        Please enter a password! 
                    </div>

                    <div class="valid-feedback">
                        Password looks good! 
                    </div>

                </div>
                <button type="submit" class="btn btn-success ">Sign Up</button </form>

        </div>
    </div>