            <% for (let listing of allListings) { %>
                <a href="/listings/<%= listing._id %>" class="listing-link" style="text-decoration: none;">
                    <div class="listing-card">
                        <!-- Listing Image -->
                        <div class="listing-image">
                            <img src="<%= listing.image %>" alt="listing_image">
                            <div class="explore-overlay">Explore More</div>
                        </div>

                        <!-- Listing Details -->
                        <div class="listing-info">
                            <h3 class="listing-title">
                                <%= listing.title %>
                            </h3>
                            <p class="listing-price text-success">&#8377;<%= listing.price.toLocaleString("en-IN") %> / Night</p>
