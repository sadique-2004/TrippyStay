<% layout('/layouts/boilerplate') -%>

    <div class="row">
        <div class="col-8 offset-3">

            <h3>
                <%= listing.title %>
            </h3>
        </div>
        <div class="card col-6 offset-3 show-card listing-card">
            <img src="<%= listing.image %>" class="card-img-top show-image" alt="listing_image">

            <div class="card-body">
                <p class="card-text">
                    <%= listing.title %> <br>
                        <%= listing.description %> <br>
                            &#8377;<%= listing.price.toLocaleString("en-IN") %> <br>
                                <%= listing.location %> <br>
                                    <%= listing.country %>
                </p>
            </div>

        </div>
        <div class="btns mb-3">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary col-1 offset-3 ">Edit</a>

            <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
                <button class="btn btn-danger offset-5 show-btn">Delete</button>
            </form>
        </div>
        <hr>
        <div class="col-8 offset-3 ">
            <h4>Leave a review</h4>
            <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
                <div class="mb-3 mt-3">
                    <label for="rating" class="form-label">Rating</label>
                    <input class="form-range" type="range" min="1" max="5" id="rating" name="review[rating]">
                </div>

                <div class="mb-3">
                    <label for="Comment" class="form-label">Comment</label>
                    <textarea class="form-control" cols="30" rows="5" name="review[comment]" id="Comment"
                        required></textarea>
                    <div class="invalid-feedback">
                        Please add some Comment for review
                    </div>
                </div>
                <button class="btn btn-outline-dark">Submit</button>
            </form>

            <hr>

            <p><b>All reviews</b></p>
            <div class="row">
                <% for (review of listing.reviews) { %>

                    <div class="card col-5 ms-3 mb-3">
                        <div class="card-body">
                            <h5 class="card-title">Sadique</h5>
                            <p class="card-text">
                                <%= review.comment %>
                            </p>
                            <p class="card-text">
                                <%= review.rating %> Stars
                            </p>
                        </div>
                        <form class="mb-3" method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                            <button class="btn btn-sm btn-dark">Delete</button>
                        </form>
                    </div>

                    
            <% } %>
            </div>
        </div>


    </div>

